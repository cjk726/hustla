<div class="page-header">
  <h3>Bookmark #<%= @bookmark.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Venue</dt>
      <dd>
        <% if @bookmark.venue.present? %>
          <a href="/venues/<%= @bookmark.venue_id %>">
            <%= @bookmark.venue.venue_name %>
          </a>
        <% end %>
      </dd>

      <dt>Pool table</dt>
      <dd>
        <% if @bookmark.pool_table.present? %>
          <a href="/pool_tables/<%= @bookmark.pool_table_id %>">
            <%= @bookmark.pool_table.pool_table_name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @bookmark.user.present? %>
          <a href="/users/<%= @bookmark.user_id %>">
            <%= @bookmark.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Comments</dt>
      <dd><%= @bookmark.comments %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bookmarks" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @bookmark.user %>
        <a href="/bookmarks/<%= @bookmark.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_bookmark/<%= @bookmark.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Bookmark has many neighborhood -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Neighborhood
      </li>

      <% @bookmark.neighborhood.each do |neighborhood| %>
        <li class="list-group-item">
          <a href="/neighborhoods/<%= neighborhood.id %>">
            <%= neighborhood.neighborhood_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/neighborhoods/<%= neighborhood.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/neighborhoods/<%= neighborhood.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_neighborhood/<%= neighborhood.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
